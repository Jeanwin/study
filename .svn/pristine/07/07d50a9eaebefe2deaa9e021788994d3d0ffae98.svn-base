<div class="container-fluid" style="background-color: #f2f2f2;border-radius: 5px">
	<div class="modal-header">
		<h3 style="font-size:24px">设置</h3>
	</div>
	<div class="modal-body">
	<form class="form-horizontal">
		<div class="form-group">
			<label class="col-xs-3 control-label">名称</label>
			<div class="col-xs-6">
				<input class="form-control" style="height: 34px;width: 232px" ng-model="resource.name" maxlength="30">
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-3 control-label">学科</label>
			<div class="col-xs-6">
				<select class="form-control" ng-model="resource.subject" style="width: 232px" ng-options="sub.value as sub.name for sub in subject">
					<option value="">--请选择--</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-3 control-label">适用阶段</label>
			<div class="col-xs-6">
				<select class="form-control" ng-model="resource.grade" style="width: 232px" ng-options="sub.value as sub.name for sub in grade">
					<option value="">--请选择--</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-3 control-label">类型</label>
			<div class="col-xs-6">
				<select class="form-control" ng-model="resource.type" style="width: 232px" ng-options="sub.value as sub.name for sub in type">
					<option value="">--请选择--</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-3 control-label">备注</label>
			<div class="col-xs-6">
				<textarea class="form-control" style="width: 232px;height:100px;" ng-model="resource.description"></textarea>
			</div>
		</div>
	</form>
	</div>
	<div class="modal-footer">
		<span><button class="btn btn-primary" ng-click="ok()">确定</button></span> <span><button class="btn btn-default" ng-click="cancel()">取消</button></span>
	</div>
</div>